# ========================================================================
# PYROX APPLICATION ENVIRONMENT CONFIGURATION - EXAMPLE
# ========================================================================
# Example Environment Configuration for Pyrox
# Copy this file to .env and customize the values for your environment
# DO NOT commit the actual .env file to version control
# ========================================================================

# ========================================================================
# APPLICATION CORE SETTINGS
# ========================================================================
APP_NAME=Pyrox
APP_AUTHOR=Your Name
APP_DESCRIPTION='A powerful tool for automation and control'
APP_URL='https://www.github.com/iroxusux/pyrox'
APP_ICON="./pyrox/ui/icons/_def.ico"
APP_DEBUG_MODE=false
APP_WINDOW_TITLE=Pyrox Application

# ========================================================================
# DIRECTORY CONFIGURATION
# ========================================================================
DIR_DATA=./data
DIR_TEMP=./temp
DIR_BACKUP=./backups
DIR_CONFIG=./config
DIR_PLUGIN=./plugins

# ========================================================================
# LOGGING CONFIGURATION
# ========================================================================
LOG_LEVEL='10'
LOG_FILE=pyrox.log
LOG_FORMAT='%(asctime)s | %(name)s | %(levelname)s | %(message)s'
LOG_DATE_FORMAT='%Y-%m-%d %H:%M:%S'
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_SUCCESS_TUPLE=(100, 'SUCCESS')
LOG_FAILURE_TUPLE=(101, 'FAILURE')
LOG_NOTICE_TUPLE=(102, 'NOTICE')

# ========================================================================
# DATABASE CONFIGURATION
# ========================================================================
DATABASE_URL=sqlite:///pyrox.db
DATABASE_DEBUG=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_TIMEOUT=30
DATABASE_RETRY_ATTEMPTS=3

# For PostgreSQL (uncomment and configure)
# DATABASE_URL=postgresql://username:password@localhost:5432/pyrox_db
# DATABASE_SSL_MODE=require

# ========================================================================
# SECURITY SETTINGS
# ========================================================================
SECRET_KEY=change-this-secret-key-in-production
ENCRYPTION_ALGORITHM=AES256
JWT_SECRET_KEY=change-this-jwt-secret-too
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================================================================
# UI/INTERFACE CONFIGURATION
# ========================================================================
UI_AUTO_INIT=true
UI_FRAMEWORK=tkinter
UI_THEME=default
UI_LANGUAGE=en
UI_WINDOW_SIZE='1920x989'
UI_WINDOW_POSITION='(-8, -8)'
UI_WINDOW_FULLSCREEN=false
UI_WINDOW_STATE='zoomed'
UI_FONT_FAMILY=Segoe UI
UI_FONT_SIZE=10
UI_LADDER_THEME=
UI_SIDEBAR_WIDTH='0.33'
UI_LOG_WINDOW_HEIGHT='0.33'

# ========================================================================
# EPLAN INTEGRATION CONFIGURATION
# ========================================================================
EPLAN_DEFAULT_PROJECT_DIR=./projects
EPLAN_IMPORT_TIMEOUT=300
EPLAN_EXPORT_TIMEOUT=300
EPLAN_SUPPORTED_FORMATS=.elk,.eox,.eod
EPLAN_AUTO_BACKUP=true

# ========================================================================
# PLC CONFIGURATION
# ========================================================================
PLC_DEFAULT_CONTROLLER_TYPE=CompactLogix
PLC_COMMUNICATION_TIMEOUT=5000
PLC_RETRY_ATTEMPTS=3
PLC_DEFAULT_IP=192.168.1.100
PLC_DEFAULT_SLOT=0
PLC_DEFAULT_PORT=44818

# ========================================================================
# LADDER LOGIC EDITOR SETTINGS
# ========================================================================
LADDER_AUTO_VALIDATE=true
LADDER_SHOW_GRID=true
LADDER_GRID_SIZE=20
LADDER_MAX_RUNGS=1000
LADDER_SYNTAX_HIGHLIGHTING=true

# ========================================================================
# FILE HANDLING CONFIGURATION
# ========================================================================
FILE_UPLOAD_MAX_SIZE=52428800
FILE_ALLOWED_EXTENSIONS=.L5X,.ACD,.ELK,.EOX,.EOD,.CSV,.XML,.JSON
FILE_AUTO_CLEANUP=true
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6

# ========================================================================
# PERFORMANCE & CACHING
# ========================================================================
CACHE_ENABLED=true
CACHE_TYPE=memory
CACHE_DEFAULT_TIMEOUT=300
MEMORY_LIMIT_MB=2048

# ========================================================================
# EXTERNAL SERVICES (configure as needed)
# ========================================================================
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USE_TLS=true
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-email-password

# ========================================================================
# MONITORING & HEALTH CHECKS
# ========================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# ========================================================================
# CUSTOM APPLICATION SETTINGS
# ========================================================================
