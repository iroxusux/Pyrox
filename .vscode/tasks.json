{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install",
            "type": "shell",
            "command": "./install.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install python",
            "type": "shell",
            "windows": {
                "command": "./utils/utils.sh",
                "args": ["prompt_and_install_python", "3", "13"]
            },
            "linux": {
                "command": "./utils/utils.sh",
                "args": ["prompt_and_install_python", "3", "13"]
            },
            "osx": {
                "command": "./utils/utils.sh", 
                "args": ["prompt_and_install_python", "3", "13"]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "sync readme",
            "type": "shell",
            "command": "python",
