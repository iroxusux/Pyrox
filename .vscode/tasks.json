        {
            "label": "install python (PowerShell)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-Command", 
                "& { Write-Host 'Installing Python 3.13...'; winget install Python.Python.3.13 --accept-package-agreements --accept-source-agreements; Write-Host 'Python installation completed!' }"
            ],
            "problemMatcher": [],
