# ========================================================================
# PYROX PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================================================
# Production-specific environment variables
# Use this as a template for production deployments
# ========================================================================

# ========================================================================
# APPLICATION CORE SETTINGS - PRODUCTION
# ========================================================================
PYROX_DEBUG=false
PYROX_LOG_LEVEL=WARNING
PYROX_LOG_FILE=/var/log/pyrox/pyrox.log
PYROX_VERSION=1.2.6
PYROX_ENVIRONMENT=production

# Production Directories (absolute paths recommended)
PYROX_DATA_DIR=/opt/pyrox/data
PYROX_TEMP_DIR=/tmp/pyrox
PYROX_BACKUP_DIR=/opt/pyrox/backups
PYROX_CONFIG_DIR=/etc/pyrox
PYROX_PLUGIN_DIR=/opt/pyrox/plugins

# ========================================================================
# SECURITY SETTINGS - PRODUCTION
# ========================================================================
SECRET_KEY=${PYROX_SECRET_KEY}
ENCRYPTION_ALGORITHM=AES256
JWT_SECRET_KEY=${PYROX_JWT_SECRET}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8

# Enhanced Security
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
SESSION_TIMEOUT_MINUTES=30
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# ========================================================================
# DATABASE CONFIGURATION - PRODUCTION
# ========================================================================
DATABASE_URL=${DATABASE_URL}
DATABASE_DEBUG=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_TIMEOUT=30
DATABASE_RETRY_ATTEMPTS=3
DATABASE_SSL_MODE=require

# ========================================================================
# LOGGING CONFIGURATION - PRODUCTION
# ========================================================================
LOG_FORMAT='%(asctime)s | %(name)s | %(levelname)s | %(message)s'
LOG_DATE_FORMAT='%Y-%m-%d %H:%M:%S'
LOG_FILE_MAX_SIZE=52428800
LOG_FILE_BACKUP_COUNT=10
LOG_TO_CONSOLE=false
LOG_TO_FILE=true

# Syslog Integration
USE_SYSLOG=true
SYSLOG_FACILITY=local0
SYSLOG_IDENT=pyrox

# ========================================================================
# PERFORMANCE & CACHING - PRODUCTION
# ========================================================================
CACHE_ENABLED=true
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=3600
REDIS_URL=${REDIS_URL}
REDIS_PASSWORD=${REDIS_PASSWORD}

# Memory Management
MEMORY_LIMIT_MB=4096
GC_THRESHOLD_0=700
GC_THRESHOLD_1=10
GC_THRESHOLD_2=10

# ========================================================================
# MONITORING & HEALTH CHECKS - PRODUCTION
# ========================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
METRICS_EXPORT_INTERVAL=60

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=500
MEMORY_MONITORING=true
CPU_MONITORING=true

# APM Integration (if using)
# APM_SERVICE_NAME=pyrox
# APM_SERVICE_VERSION=1.2.6
# APM_ENVIRONMENT=production

# ========================================================================
# BACKUP & DISASTER RECOVERY - PRODUCTION
# ========================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=2
BACKUP_RETENTION_DAYS=90
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_REMOTE_STORAGE=true
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_S3_REGION=${BACKUP_S3_REGION}

# ========================================================================
# EXTERNAL INTEGRATIONS - PRODUCTION
# ========================================================================
# Email Configuration
SMTP_SERVER=${SMTP_SERVER}
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}

# Notification Services
NOTIFICATIONS_ENABLED=true
NOTIFICATION_CHANNELS=email,sms,slack
NOTIFICATION_LEVEL=ERROR
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# ========================================================================
# COMPLIANCE & AUDIT - PRODUCTION
# ========================================================================
AUDIT_LOGGING=true
AUDIT_LOG_FILE=/var/log/pyrox/audit.log
COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=2555
GDPR_COMPLIANCE=true

# ========================================================================
# NETWORK SECURITY - PRODUCTION
# ========================================================================
ALLOWED_HOSTS=${ALLOWED_HOSTS}
CORS_ALLOWED_ORIGINS=${CORS_ALLOWED_ORIGINS}
RATE_LIMITING_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# SSL/TLS Configuration
SSL_REQUIRED=true
SSL_CERT_PATH=/etc/ssl/certs/pyrox.crt
SSL_KEY_PATH=/etc/ssl/private/pyrox.key

# ========================================================================
# SYSTEM INTEGRATION - PRODUCTION
# ========================================================================
# Systemd Integration
SYSTEMD_WATCHDOG=true
SYSTEMD_NOTIFY=true

# Container Integration (if using Docker/K8s)
CONTAINER_MODE=false
POD_NAME=${POD_NAME}
NODE_NAME=${NODE_NAME}

# ========================================================================
# FEATURE FLAGS - PRODUCTION
# ========================================================================
FEATURE_FLAGS=ladder_editor,plc_integration,eplan_import,audit_logging,performance_monitoring

# Disable Development Features
DEV_MODE=false
TEST_MODE=false
PROFILING_ENABLED=false
DEBUG_SQL=false
MOCK_EXTERNAL_SERVICES=false